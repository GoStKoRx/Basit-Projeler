print("""************************************
   Faktoriyel Bulma Programı
   *Çıkmak için 'q' ya basın
************************************
""")
while True:
    sayı = input("Sayı Giriniz:")
    if (sayı == "q"):
        print("Programdan Çıkılıyor...")
        break
    sayı = int(sayı)

    faktoriyel = 1

    for i in range (2,sayı+1):
        faktoriyel *= i
    print(faktoriyel)
